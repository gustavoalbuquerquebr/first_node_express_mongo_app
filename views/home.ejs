<% include partials/header %>

<main>
  <article>
    <% if (posts.length === 0) { %>
    <p>No posts found</p>
    <% } else { %>
    <ul>
      <% posts.forEach(post => { %>
      <li>
        <span>
          <a href="/<%=post.id%>">
            <%=post.title%>
          </a>
        </span>
        <span>
          <a href="/<%=post.id%>/edit">
            Edit
          </a>
          <form
            style="display: inline-block"
            action="/<%=post.id%>/?_method=DELETE"
            method="POST"
          >
            <input type="submit" value="Delete" />
          </form>
        </span>
      </li>
      <% }) %>
    </ul>
    <% } %>
  </article>

  <aside>
    <ul>
      <li>
        <a href="/add">Add new post</a>
      </li>
    </ul>
  </aside>
</main>

<% include partials/footer %>
